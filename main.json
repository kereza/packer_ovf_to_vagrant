{
    "builders": [
    {
        "type": "virtualbox-ovf",
        "source_path": "CentOS7Minimal.ova",
        "ssh_username": "root",
        "ssh_password": "{{user `ssh_password`}}",
        "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
    }
    ],
    "provisioners": [
        {
          "type": "ansible",
          "playbook_file": "./playbook.yml"
        }
      ],
    "post-processors": [
    [
          {
            "type": "vagrant",
            "keep_input_artifact": false,
            "output": "wtf.box"
          },
          {
            "type": "vagrant-cloud",
            "access_token": "{{user `vagrant_access_token`}}",
            "box_tag": "kereza/CentOS7",
            "version": "3.0.{{timestamp}}"
          }
        ]
    ]

}
